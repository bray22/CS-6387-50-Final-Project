{
  "name": "Legit DNS",
  "description": "Is the domain your viewing safe?",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "requestBody", 
    "webRequest", 
    "extraHeaders", 
    "runtime",
    "tabs", 
    "sessions", 
    "webRequest",
    "responseHeaders",
    "chrome.webRequest.OnBeforeSendHeadersOptions.EXTRA_HEADERS].filter(Boolean)",
    "chrome.webRequest.OnCompleted.EXTRA_HEADERS].filter(Boolean)",
    "<all_urls>",
    "tabs"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/100_16.png",
      "32": "/images/100_32.png",
      "48": "/images/100_48.png",
      "128": "/images/100_128.png"
    }
  },
  "icons": {
    "16": "/images/100_16.png",
    "32": "/images/100_32.png",
    "48": "/images/100_48.png",
    "128": "/images/100_128.png"
  }
}
